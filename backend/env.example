# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Database Configuration
# For local development (using Docker Compose)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/anointed

# Supabase Database URLs for different environments
SUPABASE_DB_URL_DEV=postgresql://postgres.xxxxxxxxxxxxxxxxxxxx:PASSWORD@aws-0-us-west-1.pooler.supabase.com:6543/postgres
SUPABASE_DB_URL_STAGE=postgresql://postgres.xxxxxxxxxxxxxxxxxxxx:PASSWORD@aws-0-us-west-1.pooler.supabase.com:6543/postgres
SUPABASE_DB_URL_PROD=postgresql://postgres.xxxxxxxxxxxxxxxxxxxx:PASSWORD@aws-0-us-west-1.pooler.supabase.com:6543/postgres

# Database Connection Settings
DB_MAX_CONNECTIONS=10
DB_STATEMENT_TIMEOUT=10s
DB_IDLE_IN_TRANSACTION_TIMEOUT=10s

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key
JWT_REFRESH_EXPIRES_IN=30d

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE=your-service-role-key
SUPABASE_ANON_KEY=your-anon-public-key
SUPABASE_BUCKET=your-storage-bucket-name

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
